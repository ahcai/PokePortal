<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<b>Pokemon:</b>
  <ul>
    <% @trainer.pokemons.each do |pokemon| %>
      <li><%= pokemon.name %>: Level <%= pokemon.level %>, Health <%= pokemon.health %> <%= button_to "Damage!", damage_path(id: pokemon), :class => "button small", :method => :patch %></li>
    <% end %>
  </ul>
